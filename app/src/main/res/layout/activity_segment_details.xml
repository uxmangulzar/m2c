<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        tools:context=".view.activity.ActionPreviewActivity">
        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:fontFamily="@font/opensans_bold"
                android:textSize="@dimen/_13ssp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/black"
                android:text="@string/segment"
                />


        </LinearLayout>


        <ImageView
            android:padding="@dimen/_10sdp"
            android:background="@drawable/rect_blue_large"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:src="@drawable/golf_three_d"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"/>
        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|bottom"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/black"
            android:text="Centre of Mass"
            />

        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:textSize="@dimen/_10ssp"

                android:fontFamily="@font/opensans_medium"
                android:textColor="@color/black"
                android:text="COM vs Stance"
                />
            <TextView
                android:textSize="@dimen/_10ssp"

                android:fontFamily="@font/opensans_bold"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:text="13.4% trail"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:textSize="@dimen/_10ssp"

                android:fontFamily="@font/opensans_medium"
                android:textColor="@color/black"
                android:text="COM Velocity: "
                />
            <TextView
                android:textSize="@dimen/_10ssp"

                android:fontFamily="@font/opensans_bold"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:text="0.5 m/s"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:textSize="@dimen/_10ssp"

                android:fontFamily="@font/opensans_medium"
                android:textColor="@color/black"
                android:text="COM Vertical/Horizontal Displacement: "
                />
            <TextView
                android:textSize="@dimen/_10ssp"

                android:fontFamily="@font/opensans_bold"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:text="-0.5/-0.6 cm"/>
        </LinearLayout>
        <ImageView
            android:padding="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/force_plate_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/kinematic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/ic_rectangle_button"
            android:fontFamily="@font/opensans_bold"
            android:text="Segment Dimensions"
            android:textAllCaps="false"
            android:textSize="@dimen/_13ssp" />
    </LinearLayout>
</ScrollView>