<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/acx"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp"
    >
    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/logo" />
    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/opensans_bold"
        android:text="Select Orientation"
        />
    <LinearLayout
        android:id="@+id/li_gocam"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2.1">
        <androidx.cardview.widget.CardView
            android:id="@+id/down_line"
            android:layout_weight="1"
            android:layout_width="0dp"
            app:cardCornerRadius="@dimen/_4sdp"

            android:layout_height="wrap_content"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/down_line"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_180sdp"/>
                <com.google.android.material.button.MaterialButton
                    android:background="@drawable/rect_session"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/opensans_medium"
                    android:text="Down the Line"
                    android:gravity="center"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.legacy.widget.Space
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/face_on"
            android:layout_weight="1"
            android:layout_width="0dp"
            app:cardCornerRadius="@dimen/_4sdp"

            android:layout_height="wrap_content"
            >
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/face_on"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_180sdp"/>
                <com.google.android.material.button.MaterialButton
                    android:background="@drawable/rect_session"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/opensans_medium"
                    android:text="Face On"
                    android:gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="start"
        android:textSize="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/opensans_medium"
        android:textColor="@color/black"
        android:text="@string/avoid_swaying"
        />
</LinearLayout>
