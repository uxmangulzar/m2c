                        android:background="@drawable/ic_rectangle_rounded"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center"
                        android:text="P9"
                        android:textColor="@color/color_blue"
                        android:textSize="@dimen/_5ssp" />

                    <ImageView
                        android:id="@+id/iv_p_nine"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="match_parent"
                        android:gravity="start"
                        android:maxLines="1"
                        android:orientation="vertical"
                        android:src="@drawable/ic_p8"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_p10"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:background="@drawable/container_overlay_blue"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center"
                        android:text="P10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />



                </LinearLayout>


            </LinearLayout>

            <com.chauthai.swipereveallayout.SwipeRevealLayout
                android:clickable="true"
                android:id="@+id/swipe_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.7"
                app:dragEdge="right"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:mode="same_level"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </FrameLayout>

            </com.chauthai.swipereveallayout.SwipeRevealLayout>
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/seekLayout"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_minus"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:src="@drawable/group_frame_minus" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="7.6"
                    android:elevation="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/iv_play"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:background="@drawable/ic_frame_play"
                            android:padding="@dimen/_7sdp"
                            android:src="@drawable/ic_vector_play_without_back" />

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:progressDrawable="@drawable/custom_seekbar"
                            android:thumb="@drawable/thumb" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/iv_plus"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/group_frame_plus" />
            </LinearLayout>


        </LinearLayout>


</layout>
