<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        tools:context=".view.activity.ActionPreviewActivity">
        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:fontFamily="@font/opensans_bold"
                android:textSize="@dimen/_13ssp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/black"
                android:text="@string/kinematic"
                />


        </LinearLayout>


        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:padding="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"/>
        <TextView
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|bottom"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/black"
            android:text="Transition Order"
            />

        <TextView
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/opensans_medium"
            android:textColor="@color/black"
            android:text="Peak Speed Order"
            />
        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/opensans_medium"
            android:textColor="@color/black"
            android:text="Peak Speed"
            />
 <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/opensans_medium"
            android:textColor="@color/black"
            android:text="Time Lag"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/segment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/ic_rectangle_button"
            android:fontFamily="@font/opensans_bold"
            android:text="Segment Dimensions"
            android:textAllCaps="false"
            android:textSize="@dimen/_13ssp" />
    </LinearLayout>
</ScrollView>