<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".view.activity.OldDashboardActivity">


    <TextView
        android:layout_marginTop="@dimen/_80sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:textSize="@dimen/_20ssp"
        android:fontFamily="@font/opensans_bold"
        android:text="Let's get Started!"
        />
    <ImageView
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/man_golf_dashboard"/>
    <TextView
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"
        android:fontFamily="@font/opensans_bold"
        android:text="Record your swing!"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/swing"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"

        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:textAllCaps="false"
        android:textSize="@dimen/_15sdp"
        android:background="@drawable/ic_rectangle_button"
        android:fontFamily="@font/opensans_bold"
        android:text="Swing"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/opensans_medium"
        android:textColor="@color/black"
        android:text="This will allow us to analyze your swing &amp; give\nyou personalized feedback."
        />
</LinearLayout>
</ScrollView>
