<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            tools:context=".view.activity.LandingActivity">

            <ImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="1"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/logo" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_weight="4.7"
                android:background="@drawable/rect_white"
                android:backgroundTint="@color/color_blue">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardElevation="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:strokeWidth="3dp">

                    <LinearLayout
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:maxLines="1"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/objct_overlay"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_bold"
                                android:gravity="center|top"
                                android:maxLines="1"
                                android:orientation="vertical"
                                android:text="Orbit"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_5ssp" />
                        </LinearLayout>


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardElevation="0dp"
                    app:strokeColor="@android:color/transparent"

                    app:strokeWidth="3dp">

                    <LinearLayout
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_bold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/down_line_overlay"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_bold"
                                android:gravity="center|top"
                                android:maxLines="1"
                                android:orientation="vertical"
                                android:text="Down the Line"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_4ssp" />
                        </LinearLayout>


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_60sdp"
                    app:cardElevation="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:strokeWidth="3dp">

                    <LinearLayout
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_bold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/face_on_overlay"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_bold"
                                android:gravity="center|top"
                                android:maxLines="1"
                                android:orientation="vertical"
                                android:text="Face On"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_5ssp" />
                        </LinearLayout>


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_110sdp"
                    app:cardElevation="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:strokeWidth="3dp">

                    <LinearLayout
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_bold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/face_on_overlay"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_bold"
                                android:gravity="center|top"
                                android:maxLines="1"
                                android:orientation="vertical"
                                android:text="Top View"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_5ssp" />
                        </LinearLayout>


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />
            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="3.5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="0.8"
                android:background="@drawable/ic_rectangle_black"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_7sdp"
                    android:background="@drawable/ic_frame_play"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/ic_vector_play_without_back" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:progressDrawable="@drawable/custom_seekbar"
                        android:thumb="@drawable/thumb"
                        android:thumbTint="@color/white" />

                    <TextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/ic_rectangle_rounded"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="P1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5ssp" />

                    <TextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_70sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/ic_rectangle_rounded"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="P3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5ssp" />

                    <TextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_110sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/ic_rectangle_rounded"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="P5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5ssp" />
                    <TextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_150sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/ic_rectangle_rounded"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="P7"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5ssp" />
                    <TextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_190sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/ic_rectangle_rounded"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="P9"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5ssp" />

                    <TextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:background="@drawable/ic_rectangle_rounded"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="P2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5ssp" />
                    <TextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_90sdp"
                        android:background="@drawable/ic_rectangle_rounded"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="P4"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5ssp" />
                    <TextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_130sdp"
                        android:background="@drawable/ic_rectangle_rounded"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="P6"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5ssp" />

                    <TextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_170sdp"
                        android:background="@drawable/ic_rectangle_rounded"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="P8"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5ssp" />
                    <TextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_210sdp"
                        android:background="@drawable/ic_rectangle_rounded"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="P10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5ssp" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>
