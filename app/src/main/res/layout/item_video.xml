<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_gravity="start"
    android:layout_marginBottom="@dimen/_8sdp">
    <TextView
        android:id="@+id/tv_rec"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:gravity="end"
        android:fontFamily="@font/opensans_bold"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_13ssp"
        android:text="Recording: 4" />
    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:clickable="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dragEdge="right"
        app:mode="same_level"
        android:focusable="true">
    <FrameLayout
        android:id="@+id/delete_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_46sdp"
        >

        <TextView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:backgroundTint="@color/red"
            android:background="@drawable/ic_rectangle_button"
            android:textColor="@android:color/white"
            android:text="Delete"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/main_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:weightSum="5"
            >
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/video_rectangle"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/play_small"/>
            </FrameLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="2.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start"
                    android:maxLines="1"
                    android:textSize="@dimen/_12ssp"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Recording 22"
                    />
                <TextView
                    android:id="@+id/tv_swing_type"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start"
                    android:textSize="@dimen/_12ssp"
                    android:gravity="start"
                    android:textColor="@color/color_blue"
                    android:fontFamily="@font/opensans_medium"
                    />
                <TextView
                    android:id="@+id/tv_club_type"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start"
                    android:textSize="@dimen/_12ssp"
                    android:gravity="start"
                    android:fontFamily="@font/opensans_medium"
                    />
            </LinearLayout>
<!--            <LinearLayout-->
<!--                android:layout_marginLeft="@dimen/_10sdp"-->
<!--                android:layout_weight="2.8"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:orientation="vertical">-->
<!--                <TextView-->
<!--                    android:id="@+id/tv_name"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:orientation="vertical"-->
<!--                    android:layout_gravity="start"-->
<!--                    android:maxLines="1"-->
<!--                    android:textSize="@dimen/_12ssp"-->
<!--                    android:gravity="start"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:fontFamily="@font/opensans_bold"-->
<!--                    android:text="Recording 22"-->
<!--                    />-->
<!--                <TextView-->
<!--                    android:id="@+id/tv_time"-->
<!--                    android:layout_marginTop="@dimen/_6sdp"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:orientation="vertical"-->
<!--                    android:layout_gravity="start"-->
<!--                    android:textSize="@dimen/_14ssp"-->
<!--                    android:gravity="start"-->
<!--                    android:fontFamily="@font/opensans_medium"-->
<!--                    android:text="14:00 PM"-->
<!--                    />-->
<!--            </LinearLayout>-->
            <ImageView
                android:id="@+id/report"
                android:src="@drawable/ic_group_report"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_marginStart="@dimen/_3sdp"
                android:id="@+id/visualize"
                android:src="@drawable/ic_group_visual"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"/>





        </LinearLayout>
    </FrameLayout>
    </com.chauthai.swipereveallayout.SwipeRevealLayout>


</LinearLayout>